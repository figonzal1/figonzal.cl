---
import FloatingTools from "@components/common/floating-tools/FloatingTools.astro";
import { Picture } from "astro:assets";

const { title, description, coverImage, techStack } = Astro.props;
---

<div class="flex flex-col items-center">
  <Picture
    src={coverImage}
    alt={title}
    formats={["webp", "png"]}
    fallbackFormat="png"
    class="object-cover object-left rounded-lg shadow-lg opacity-90 h-64"
  />
  <div class="relative px-5 lg:px-10 -mt-5 lg:-mt-16 w-full">
    <div
      class="group flex flex-col justify-start gap-4 backdrop-blur-lg max-h-52 2xl:h-52 bg-fpurple/5 p-3 sm:p-6 rounded-lg shadow-lg shadow-fpurple-box border-2 border-fpurple hover:scale-105 hover:lg:scale-110 transition-transform duration-150 ease-in-out"
    >
      <FloatingTools techStack={techStack} />

      <h2
        class="text-fgreen text-center text-sm sm:text-xl font-semibold uppercase leading-tight"
      >
        {title}
      </h2>

      <div
        class="text-white text-sm font-mono tracking-tight leading-tight text-pretty truncate"
      >
        <p
          class="text-center 2xl:text-left line-clamp-3 break-normal hyphens-auto"
        >
          {description}
        </p>
      </div>

      <div class="mt-auto sm:py-0 flex justify-center gap-3">
        <slot />
      </div>
    </div>
  </div>
</div>
