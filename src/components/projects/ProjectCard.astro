---

const { image, title, description } = Astro.props;
---

<div>
  <img
    src={image}
    class="object-cover object-center rounded-lg shadow-lg opacity-90"
  />
  <div class="relative px-10 -mt-16 w-full">
    <div
      class="backdrop-blur-md bg-fpurple/5 p-6 rounded-lg shadow-lg shadow-fpurple-box border-2 border-fpurple hover:scale-105 transition-transform duration-150 ease-in-out"
    >
      <h2
        class="mt-1 text-fgreen text-center text-xl font-semibold uppercase leading-tight"
      >
        {title}
      </h2>
      <p class="py-4 text-white text-sm">
        {description}
      </p>

      <div class="flex justify-center gap-3">
        <slot name="project-buttons"/>
      </div>
    </div>
  </div>
</div>
