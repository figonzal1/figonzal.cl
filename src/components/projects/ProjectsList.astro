---
import PurpleButton from "@components/common/PurpleButton.astro";
import ProjectCard from "./ProjectCard.astro";
import type { ProjectProp } from "src/utils/types";

import { projectSeed } from "../../utils/projectSeed";
---

{
  projectSeed.map((project: ProjectProp) => (
    <ProjectCard
      title={project.title}
      image={project.image}
      description={project.description}
    >
      {project.buttons.map((button) => (
        <PurpleButton link={button.link} button={button} />
      ))}
    </ProjectCard>
  ))
}
