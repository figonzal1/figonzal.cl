---
import PurpleButton from "@components/common/PurpleButton.astro";
import type { ProjectProp } from "src/utils/types";

import { FaGithub } from "react-icons/fa6/index.js";
import { SiGoogleplay } from "react-icons/si/index.js";
import ProjectCard from "../ProjectCard.astro";
import { projectSeedEn } from "../../../utils/projectSeed";
---

{
  projectSeedEn.map((project: ProjectProp) => (
    <ProjectCard
      title={project.title}
      image={project.image}
      description={project.description}
    >
      {project.buttons.map((button) => (
        <PurpleButton link={button.link} slot="project-buttons">
          {button.icon === FaGithub ? (
            <FaGithub color="white" size={21} />
          ) : (
            <SiGoogleplay color="white" size={21} />
          )}
          <div class="hidden sm:block">
            <h2 class="text-white ps-1">{button.title}</h2>
          </div>
        </PurpleButton>
      ))}
    </ProjectCard>
  ))
}
