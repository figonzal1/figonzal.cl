---
import Typewriter from "typewriter-effect";
import { Image } from "astro:assets";
import homeMain from "@assets/images/home-main.svg";
---

<section>
  <div
    class="flex flex-col lg:flex-row justify-center items-start mt-32 py-2 gap-10"
  >
    <div
      class="h-80 w-full text-left text-white text-2xl p-10 sm:p-16 lg:p-20 lg:w-1/2 lg:text-4xl"
    >
      <h1 class="pb-7">
        Hello
        <span class="inline-block animate-wave pe-4">👋🏻</span>
      </h1>

      <h1 class="pb-14">
        I 'm <strong class="text-fgreen">Felipe González</strong>
      </h1>
      <div class="text-fgreen font-bold">
        <Typewriter
          options={{
            strings: [
              "Passionate about technology and innovation.",
              "Android & AR developer",
              "Computer Engineer",
              "Open Source Contributor",
            ],
            autoStart: true,
            loop: true,
            delay: "natural",
            deleteSpeed: 10,
          }}
          client:load
        />
      </div>
    </div>
    <div class="lg:pe-20 hidden lg:block">
      <Image src={homeMain} class="max-h-[450px] opacity-90" alt="Home" />
    </div>
  </div>
</section>
