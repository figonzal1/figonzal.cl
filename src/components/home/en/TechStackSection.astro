---
import {
  SiKotlin,
  SiDocker,
  SiCsharp,
  SiJavascript,
  SiAndroid,
  SiAndroidstudio,
  SiTypescript,
  SiSonarqube,
  SiIntellijidea,
  SiVisualstudiocode,
  SiPostman,
  SiLinux,
  SiUnity,
  SiTeamcity,
  SiSpringboot,
  SiNextdotjs,
  SiAdonisjs,
} from "react-icons/si/index.js";
import { FaGitAlt, FaJava, FaPhp, FaGithub } from "react-icons/fa/index.js";
import Github from "./Github";
import ToolCard from "../ToolCard.astro";
---

<section>
  <!-- FRAMEWORKS -->
  <div class="pt-24 lg:pt-56">
    <h1 class="text-2xl md:text-4xl text-white text-center">
      My <span class="text-fgreen font-extrabold">Languages & Frameworks</span>
    </h1>

    <div class="flex flex-wrap justify-center gap-5 p-10 lg:px-44 xl:px-52">
      <ToolCard icon={SiAndroid} alt="Android" />
      <ToolCard icon={SiKotlin} alt="Koltin" />
      <ToolCard icon={FaJava} alt="Java" />
      <ToolCard icon={FaPhp} alt="Php" />
      <ToolCard icon={SiCsharp} alt="Csharp" />
      <ToolCard icon={SiJavascript} alt="Javascript" />
      <ToolCard icon={SiTypescript} alt="Typescript" />
      <ToolCard icon={SiSpringboot} alt="Springboot" />
      <ToolCard icon={SiNextdotjs} alt="Nextdotjs" />
      <ToolCard icon={SiAdonisjs} alt="Adonisjs" />
    </div>
  </div>

  <!-- TOOLS -->
  <div class="pt-14 md:pt-24">
    <h1 class="text-2xl md:text-4xl text-white text-center">
      My <span class="text-fgreen font-extrabold">Dev Tools</span>
    </h1>

    <div class="flex flex-wrap justify-center gap-5 p-10 lg:px-44 xl:px-52">
      <ToolCard icon={SiAndroidstudio} alt="Android Studio" />
      <ToolCard icon={SiIntellijidea} alt="Intellijidea" />
      <ToolCard icon={SiTeamcity} alt="Team city" />
      <ToolCard icon={SiVisualstudiocode} alt="Visual Studio code" />
      <ToolCard icon={FaGitAlt} alt="Git" />
      <ToolCard icon={FaGithub} alt="Github" />
      <ToolCard icon={SiDocker} alt="Docker" />
      <ToolCard icon={SiPostman} alt="Postman" />
      <ToolCard icon={SiLinux} alt="Linux" />
      <ToolCard icon={SiUnity} alt="Unity" />
      <ToolCard icon={SiSonarqube} alt="Sonarqube" />
    </div>
  </div>

  <!-- GITHUB SECTION -->
  <div class="flex flex-col py-24 gap-5 md:gap-10">
    <h1 class="text-2xl md:text-4xl dark:text-white text-center">
      <span class="text-fgreen font-extrabold">Coding</span> Days
    </h1>
    <Github client:idle />
  </div>
</section>
