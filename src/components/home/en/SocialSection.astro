---
import { FaGithub } from "react-icons/fa6";
import { ImFacebook, ImLinkedin2 } from "react-icons/im";
import { SiGoogleplay, SiInstagram } from "react-icons/si";
import SocialLink from "../SocialLink.astro";
---

<section>
  <div class="py-14 px-10">
    <h1 class="text-2xl md:text-4xl text-white text-center">
      My <span class="text-fgreen font-extrabold">Socials</span>
    </h1>

    <p class="text-center text-white py-3">
      Feel free to <span class="text-fgreen">connect</span>
      with me
    </p>

    <div
      class="flex flex-wrap justify-center items-center py-4 md:py-8 gap-3 md:gap-6"
    >
      <SocialLink icon={FaGithub} link="https://github.com/figonzal1" />

      <SocialLink
        icon={SiGoogleplay}
        link="https://play.google.com/store/apps/dev?id=4650587366054768148"
      />

      <SocialLink
        icon={SiInstagram}
        link="https://www.instagram.com/figonzal.cl"
      />

      <SocialLink icon={ImFacebook} link="https://facebook.com/figonzal1" />

      <SocialLink icon={ImLinkedin2} link="https://facebook.com/figonzal1" />
    </div>
  </div>
</section>
