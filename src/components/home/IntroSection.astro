---
import Typewriter from "typewriter-effect";
import { Picture } from "astro:assets";
import homeMain from "@assets/images/home-main.svg";

const { hello, im, typeWritter } = Astro.props;
---

<section>
  <div
    class="flex flex-col lg:flex-row justify-center items-start mt-32 py-2 gap-10"
  >
    <div
      class="h-80 w-full text-left text-white text-2xl p-10 sm:p-16 lg:p-20 lg:w-1/2 lg:text-4xl"
    >
      <h1 class="pb-7">
        {hello}
        <span class="inline-block animate-wave pe-4">ğŸ‘‹ğŸ»</span>
      </h1>

      <h1 class="pb-14">
        {im}
        <span class="text-fgreen font-medium">Felipe GonzÃ¡lez</span>
      </h1>
      <div class="text-fgreen font-medium">
        <Typewriter
          options={{
            strings: typeWritter,
            autoStart: true,
            loop: true,
            delay: "natural",
            deleteSpeed: 10,
          }}
          client:load
        />
      </div>
    </div>
    <div class="lg:pe-20 hidden lg:block">
      <Picture
        src={homeMain}
        formats={["webp"]}
        fallbackFormat="svg"
        class="max-h-[450px] opacity-90"
        alt="Home"
        loading="eager"
        decoding="async"
      />
    </div>
  </div>
</section>
