---
import Particle from "../common/Particle.astro";
import Typewriter from "typewriter-effect";
---

<section>
  <div class="w-0 h-0">
    <Particle />
  </div>
  <div class="flex flex-col lg:flex-row justify-between items-start mt-32 py-2">
    <div class="text-left dark:text-white text-4xl p-20 flex-grow-0">
      <h1 class="pb-7">
        Hola
        <span class="wave">👋🏻</span>
      </h1>

      <h1 class="pb-14">
        Soy <strong class="text-fgreen">Felipe González</strong>
      </h1>
      <div class="text-fgreen font-bold">
        <Typewriter
          options={{
            strings: [
              "Apasionado por la tecnología e innovación",
              "Desarrollador Android & AR",
              "Ingeniero Informático",
              "Colaborador Open Source",
            ],
            autoStart: true,
            loop: true,
            delay: "natural",
            deleteSpeed: 10,
          }}
          client:load
        />
      </div>
    </div>
    <div class="flex-shrink-0 pe-20">
      <img
        src="images/home-main.svg"
        alt="home pic"
        class="max-h-[450px] opacity-90"
      />
    </div>
  </div>
</section>
