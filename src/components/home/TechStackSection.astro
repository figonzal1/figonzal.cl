    <h1 class="text-4xl dark:text-white text-center">
      Mis dev <span class="text-fgreen font-extrabold">Tools</span>
    </h1>

    <div class="flex flex-wrap justify-center gap-5 pt-10 px-64">
      <ToolCard icon={SiAndroidstudio} alt="Android Studio" />
      <ToolCard icon={SiIntellijidea} />
      <ToolCard icon={SiTeamcity} />
      <ToolCard icon={SiVisualstudiocode} />
      <ToolCard icon={DiGit} />
