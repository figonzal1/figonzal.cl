---
import { AiOutlineFork, AiOutlineFundProjectionScreen, AiOutlineHome, AiOutlineStar } from "react-icons/ai";
import { ImBlog } from "react-icons/im";
import NavbarLink from "./NavbarLink.astro";

---

<nav
  class="flex items-center px-24 py-4 mt-0 z-50 backdrop-blur-md fixed w-full"
>
  <div>
    <img class="h-7" src="images/logo.png" alt="Figonzal.cl logo" />
  </div>
  <div class="flex justify-between items-center ms-auto gap-10 ">

    <NavbarLink icon={AiOutlineHome} name="Inicio" link="/" />
    <NavbarLink icon={AiOutlineFundProjectionScreen} name="Proyectos" link="/proyectos" />
    <NavbarLink icon={ImBlog} name="Blog" link="https://figonzal.hashnode.dev/" />

    <button
      class="flex justify-center items-center border-2 border-fpurple bg-fpurple-box hover:bg-fpurple/30 p-2 rounded-lg gap-1 px-4 py-2 transition-colors duration-150 ease-in-out"
    >
      <AiOutlineFork size={18} color="white" />
      <AiOutlineStar size={18} color="white" />
    </button>
  </div>
</nav>
