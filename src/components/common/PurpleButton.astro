---
const { title, link, icon: Icon } = Astro.props;
---

<a
  class="flex justify-center items-center border-2 border-fpurple bg-fpurple-box hover:bg-fpurple/30 p-2 rounded-lg gap-1 px-4 py-2 transition-colors duration-150 ease-in-out"
  href={link}
  target="_blank"
  referrerpolicy="no-referrer"
>
  <Icon color="white" size={21} alt={title} />
  <div class="hidden sm:block">
    <h2 class="text-white ps-1">{title}</h2>
  </div>
</a>
