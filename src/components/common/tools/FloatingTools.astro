---
import type { TechStack } from "src/utils/types";
import FloatingIconTool from "./FloatingIconTool.astro";

const { techStack } = Astro.props;
---

<div
  class="group-hover:opacity-85 opacity-0 sm:opacity-85 2xl:opacity-0 absolute right-4 -bottom-3 border-2 border-fgreen/90 bg-fpurple shadow-md shadow-fpurple-box rounded-lg transition-all ease-in-out duration-300 delay-150"
>
  <div class="flex flex-row gap-3 p-1">
    {
      techStack.map((item: TechStack) => (
        <FloatingIconTool title={item.title} icon={item.icon} />
      ))
    }
  </div>
</div>
